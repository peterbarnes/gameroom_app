<div class="row">
  <div class="col-md-6 text-center">
    <h1 class="lead text-center focus">Follow us</h1>
    <a href="https://www.facebook.com/gameroomforpresident" target="blank" class="">
      <i class="fa fa-facebook-square fa-5x"></i>
    </a>
  </div>
  <div class="col-md-6">
    <h1 class="lead text-center focus">Contact us</h1>
    <div class="emailform">
      <%= form_tag("/send", method: "post") do %>
        <div class="form-group">
          <%= text_field_tag(:name, params[:name], class: 'form-control input-lg lead', placeholder: "Name") %>
        </div>
        <div class="form-group">
          <%= text_field_tag(:email, params[:email], class: "form-control input-lg lead", placeholder: "Email") %>
        </div>
        <div class="form-group">
          <%= text_area_tag(:body, params[:body], class: "form-control input-lg lead", placeholder: "Message", rows: '5') %>
        </div>
        <button type="submit" 
                class="btn btn-primary">
             <i class="fa fa-envelope-o"></i> 
            Send
        </button>
      <% end %>
    </div>
  </div>
</div>
