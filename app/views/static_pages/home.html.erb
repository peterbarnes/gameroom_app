<% assets %>
<div class="row">
  <div class="col-md-12">
    <div>
      <%= image_tag("logo.png", :alt => "Logo", class: "center-block img-responsive") %>
    </div>
  </div>
</div>
<div class="row">
<% @blurbs.each do |b| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>
          <i class="fa fa-<%= b.icon %>"></i>
          <%= b.title %>
          <% if signed_in? && current_user.admin? %>
            <%= link_to edit_blurb_path(b) do %>
              <i class="fa fa-pencil-square-o pull-right"></i>
            <% end %>
            <%= link_to b, method: :delete, data: { confirm: "You sure?" } do %>
              <i class="fa fa-times-circle pull-right red"></i>
            <% end %>
          <% end %>
        </h4>
      </div>
      <div class="panel-body">
        <p>
          <%= b.desc %>
        </p>
      </div>
    </div>
  </div>
<% end %>
</div>
